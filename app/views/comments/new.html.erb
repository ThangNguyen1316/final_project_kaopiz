<div class="container">
    <ul>
        <% @comment.errors.full_messages.each do |message| %>
        <li> <%= message %> </li>
        <% end %>
    </ul>
    <%= form_with model: @comment, url: article_comments_path(@comment.article), local: true do |f| %>
        <div>
            <%= f.label :content, 'Content' %>
        </div>
        <div>
            <%= f.text_area :content %>
        </div>
        <%= f.submit 'Summit', class: 'btn-primary' %>
    <% end %>    
</div>

      
